<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.anakkos.TambahAnakKos">

    <TextView
            android:text="Tambah Data Anak Kos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Anak Kos"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:endIconMode="clear_text"
            app:errorContentDescription="Nama harus diisi"
            android:id="@+id/namaInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/namaInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Asal Anak Kos"
            app:layout_constraintTop_toBottomOf="@+id/namaInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/asalInputLayout"
            android:layout_marginTop="32dp"
            app:endIconMode="clear_text"
            app:errorContentDescription="Asal Harus Diisi"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/asalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. HP Anak Kos"
            app:layout_constraintTop_toBottomOf="@+id/asalInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/nohpInputLayout"
            android:layout_marginTop="32dp"
            app:endIconMode="clear_text"
            app:errorContentDescription="No. HP harus diisi"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nohpInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Simpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/simpanButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>